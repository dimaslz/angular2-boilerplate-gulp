{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "outDir": "../public",
        "declaration": true
    },
    "exclude": [
        "node_modules",
        "typings/main",
        "typings/main.d.ts"
    ],
    "filesGlob": [
      "./**/*.ts",
      "../test/**/*.ts",
      "!../node_modules/**/*.ts",
      "../typings/browser.d.ts"
    ]
}